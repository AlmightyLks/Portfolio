@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@IsDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        My Application
        <MudSpacer />
        <MudIconButton @onclick="ToggleDarkMode" Color="Color.Inherit" Icon="@ModeIcon" />
    </MudAppBar>
    <MudMainContent Class="d-flex align-center justify-center mud-width-full">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    public string ModeIcon => IsDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode;

    public bool IsDarkMode { get; set; } = true;

    public void ToggleDarkMode()
        => IsDarkMode = !IsDarkMode;
}

<style>
    #outer {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>